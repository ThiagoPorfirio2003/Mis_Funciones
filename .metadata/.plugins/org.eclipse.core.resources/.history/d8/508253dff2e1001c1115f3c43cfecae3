#ifndef FINDDATO_H_
#define FINDDATO_H_

/// @brief
///
/// @pre
/// @post
/// @param direccionNumeroMayor
/// @param numeroRecibido
/// @param direccionBanderaNumeroMaximo
/// @return
int find_GuardarMayorInt(int* direccionNumeroMayor, int numeroRecibido, int* direccionBanderaNumeroMaximo);

/// @brief
///
/// @pre
/// @post
/// @param numeroMenor
/// @param numeroRecibido
/// @param banderaNumeroMenor
/// @return
int find_GuardarMenorInt(int* numeroMenor, int numeroRecibido, int* banderaNumeroMenor);

/// @brief
///
/// @pre
/// @post
/// @param direccionNumeroMayor
/// @param direccionBanderaNumeroMaximo
/// @param cantidadNumeros
/// @param direccionPrimerNumero
/// @return
int find_BuscarMayorInt(int* direccionNumeroMayor, int* direccionBanderaNumeroMaximo, int cantidadNumeros, int* direccionPrimerNumero);

/// @brief
///
/// @pre
/// @post
/// @param direccionNumeroMenor
/// @param direccionBanderaNumeroMenor
/// @param cantidadNumeros
/// @param direccionPrimerNumero
/// @return
int find_BuscarMenorInt(int* direccionNumeroMenor, int* direccionBanderaNumeroMenor, int cantidadNumeros, int* direccionPrimerNumero);

int find_GuardarMayorFloat(float* direccionNumeroMayor, float numeroRecibido, int* direccionBanderaNumeroMaximo);

int find_GuardarMenorFloat(float* direccionNumeroMenor, float numeroRecibido, int* direccionBanderaNumeroMenor);

int find_BuscarMayorFloat(int* direccionNumeroMayor, int* direccionBanderaNumeroMaximo, int cantidadNumeros, int* direccionPrimerNumero);


int guardarMenorOMayorInt(int* numeroMayorMenor, int numeroRecibido, int* banderaMayorMenor, int (*funcionMayorMenor)(int*,int,int*), int eleccionMayorMenor);

