#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>
#include "utn.h"

int pedirYConseguirMayorNumero(int* numeroMayor, int cantidadDeNumeros, char* mensaje, char* mensajeError, int minimo, int maximo)
{
	int retorno;
	int numeroAIngresar;
	int banderaNumeroMaximo;

	banderaNumeroMaximo=1;
	retorno=1;

	if(numeroMayor !=NULL && mensaje !=NULL && mensajeError !=NULL && cantidadDeNumeros >0)
	{
		for(int i;i<cantidadDeNumeros;i++)
		{
			if(!(utn_getIntRango(&numeroAIngresar, mensaje, mensajeError, minimo, maximo)))
			{
				if(recibirYConseguirMayorNumero(&numeroMayor, numeroAIngresar, &banderaNumeroMaximo))
				{
					break;
				}
			}
		}
		retorno =0;
	}
	return retorno;
}

int recibirYConseguirMayorNumero(int* numeroMayor, int numeroRecibido, int* banderaNumeroMaximo)
{
	int retorno;

	retorno=1;

	if(numeroMayor != NULL && banderaNumeroMaximo !=NULL)
	{
		retorno =0;
		if(*banderaNumeroMaximo || *numeroMayor<numeroRecibido)
		{
			*numeroMayor=numeroRecibido;
			*banderaNumeroMaximo=0;
		}
	}
	return retorno;
}

